<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:sg="clr-namespace:AvaloniaSpacedGrid;assembly=AvaloniaSpacedGrid"
			 Name="DashBoard"
             mc:Ignorable="d" 
			 d:DesignWidth="800" 
			 d:DesignHeight="450"
             x:Class="GingerMintSoft.Domotica.Gui.ViewModels.Views.DashBoard">
	<sg:SpacedGrid Name="SpacedGrid" RowSpacing="1" ColumnSpacing="1" Grid.Row="1">
		<sg:SpacedGrid.RowDefinitions>
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
		</sg:SpacedGrid.RowDefinitions>
		<sg:SpacedGrid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
		</sg:SpacedGrid.ColumnDefinitions>
		<Button Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Classes="Primary" Margin="0 0" Background="LightGray"/>
		<Button Grid.Row="0" Grid.Column="3" Grid.RowSpan="3" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Classes="Primary" Margin="0 0" Background="LightGray"/>	
		<Button Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Classes="Primary" Margin="0 0" Background="LightGray"/>
	</sg:SpacedGrid>		
</UserControl>
