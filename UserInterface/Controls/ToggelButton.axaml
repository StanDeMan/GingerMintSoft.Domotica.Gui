<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:icon="using:Material.Icons.Avalonia"
             mc:Ignorable="d" 
			 d:DesignWidth="24" 
			 d:DesignHeight="24"
             x:Class="GingerMintSoft.Domotica.Gui.UserInterface.Controls.ToggelButton">
	<Border
        Background="Transparent">
        <ToggleButton 
			Width="24"
			Height="24"
			IsChecked="False"
			Command="{Binding ArrowCommand}">
            <Panel>
                <DrawingPresenter 
					Width="18"
					Height="18"
					Drawing="{DynamicResource WindowMinimize}" 
					Classes="tbunchecked"/>
                <DrawingPresenter 
					Width="18"
					Height="18"
					Drawing="{DynamicResource WindowMaximize}" 
					Classes="tbchecked"/>
            </Panel>
        </ToggleButton>                
    </Border>
</UserControl>
