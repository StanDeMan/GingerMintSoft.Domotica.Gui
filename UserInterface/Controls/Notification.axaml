<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignWidth="500" 
             d:DesignHeight="50"
             x:Class="GingerMintSoft.Domotica.Gui.UserInterface.Controls.Notification">
	<Grid ColumnDefinitions="10, 50" HorizontalAlignment="Stretch" Background="Transparent">
		<StackPanel>
		    <Image Source="/Assets/warning.png" Height="30" Width="30" Margin="10,10,80,0" HorizontalAlignment="Left"/>
		</StackPanel>
	    <StackPanel Orientation="Horizontal">
		    <TextBlock 
				x:Name="Notification" 
				Foreground="LightGray" 
				HorizontalAlignment="Left" 
				FontSize="24" 
				TextWrapping="Wrap" 
				VerticalAlignment="Top" 
				Margin="58,11,0,0" 
				Text="You have got 1 new alert"/>
	    </StackPanel >
	</Grid>
</UserControl>
